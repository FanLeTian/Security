<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4">

    <include layout="@layout/toolbar_back" />


    <TextView
        android:id="@+id/tv_help"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/jt"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:text="常见问题"
        android:textColor="#484848"
        android:textSize="15sp"
        android:background="#FFFFFF"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/jt"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:text="关于我们"
        android:textColor="#484848"
        android:textSize="15sp"
        android:background="#FFFFFF"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />


    <TextView
        android:id="@+id/tv_find_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/jt"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:text="找回密码"
        android:textColor="#484848"
        android:textSize="15sp"
        android:background="#FFFFFF"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:id="@+id/gesture_password_switch"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:gravity="center_vertical"
            android:text="手势密码"
            android:textColor="#484848"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />


        <Switch
            android:id="@+id/switvh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:id="@+id/reset_gesture_pasword"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:gravity="center_vertical"
            android:text="修改手势"
            android:textColor="#484848"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="重置"
            android:id="@+id/re_set_gesture"
            android:textSize="14sp"
            android:textColor="#13B8D1"
            />

        />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:text="联系我们"
            android:textColor="#484848"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/to_wechat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/wx"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/jt"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:text="18792574668"
            android:textColor="#484848"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="43dp"
            android:background="#cccccc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/yj"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:text="letianf@gmail.com"
            android:textColor="#484848"
            android:textSize="15sp"
            android:drawableRight="@drawable/jt"/>

    </LinearLayout>


</LinearLayout>