<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back" />


    <LinearLayout
        android:id="@+id/login_username"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_edittext_selector"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dh"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:id="@+id/phone_number"
            android:hint="请输入手机号码"
            android:textSize="14sp"
            android:textColorHint="#A4A4A4"
            android:inputType="phone"
            android:maxLength="11"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ycsc"
            android:layout_marginRight="20dp"
            android:id="@+id/delete_1"
            android:visibility="gone"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_password"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="11dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_edittext_selector"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mm" />

        <EditText
            android:id="@+id/set_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请设置6—20位的密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="#A4A4A4"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/delete_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/ycsc"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/watch_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/bkj" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rigisiter_agin_password"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_edittext_selector"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mm"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:id="@+id/re_set_password"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textColorHint="#A4A4A4"
            android:maxLength="20"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ycsc"
            android:layout_marginRight="20dp"
            android:id="@+id/delete_3"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bkj"
            android:id="@+id/watch_password_2"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="17dp"
        android:background="#EB6622"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:id="@+id/register" />

</LinearLayout>